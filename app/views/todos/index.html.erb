<%= flash[:notice] %>
<div class="text-2xl font-bold mb-4">
    <div class="bg-gray-200 rounded-md mt-5 mb-5 p-4 w-full">
        <div class="text-center">
            <h2 class="text-2xl font-bold">My Todo App</h2>
        </div>
    </div>
</div>
<%= link_to 'Add Task', new_todo_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg text-lg' %>

<div class="overflow-x-auto">
  <table class="w-full table-auto border-collapse">
    <thead>
      <tr class="bg-gray-200">
        <th class="px-4 py-2">To-Do Task List</th>
        <th class="px-4 py-2">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @task.each do |f| %>
        <tr class="border-b">
          <td class="px-4 py-2"><%= f.task %></td>
          <td class="px-4 py-2"><%= link_to 'Edit',edit_todo_path(f) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>






